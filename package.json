{
  "name": "stillies-desktop",
  "description": "Play movies",
  "author": "Ahmed Shokry <shokry92@gmail.com>",
  "build": {
    "productName": "Stillies",
    "appId": "com.shockry.stillies",
    "mac": {
      "category": "public.app-category.entertainment"
    },
    "linux": {
      "target": "deb",
      "category": "AudioVideo"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "version": "1.1.0",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "electron-store": "^5.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-player": "^1.14.2",
    "react-scripts": "^3.4.0",
    "socket.io-client": "^2.3.0",
    "styled-components": "^4.4.1"
  },
  "scripts": {
    "start-react": "rescripts start",
    "start": "concurrently \"BROWSER=none yarn start-react\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "rescripts build",
    "eject": "react-scripts eject",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-builder build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.13",
    "@rescripts/rescript-env": "^0.0.11",
    "concurrently": "^5.0.2",
    "electron": "^9.4.0",
    "electron-builder": "^22.7.0",
    "electron-devtools-installer": "^2.2.4",
    "wait-on": "^4.0.0"
  }
}
